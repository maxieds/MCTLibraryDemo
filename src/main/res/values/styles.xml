<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActionBarTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColorPrimary">@color/actionBarTitleTextColor</item>
        <item name="android:textColor">@color/actionBarTitleTextColor</item>
        <item name="android:textSize">6sp</item>
        <item name="android:subtitleTextColor">@color/actionBarSubtitleTextColor</item>
        <item name="android:textStyle">normal|bold|italic</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:contentInsetEnd">5dp</item>
        <item name="android:contentInsetStart">7dp</item>
        <item name="android:contentInsetLeft">7dp</item>
        <item name="android:titleMarginStart">15dp</item>
        <item name="android:titleTextStyle">@style/Actionbar.TitleText</item>
        <item name="android:actionOverflowMenuStyle">@style/AppTheme.PopupOverlay</item>
        <item name="android:subtitleTextStyle">@style/Actionbar.TitleText</item>
        <item name="android:textColorSecondary">@color/actionBarSubtitleTextColor</item>
    </style>

    <style name="Actionbar.TitleText" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/actionBarTitleTextColor</item>
        <item name="android:textColorPrimary">@color/actionBarTitleTextColor</item>
        <item name="android:textSize">6sp</item>
    </style>

    <style name="GridButtons" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:maxButtonHeight">6dp</item>
        <item name="android:layout_columnWeight">0.25</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:maxHeight">25dp</item>
        <item name="android:layout_weight">0.29</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:drawablePadding">3dp</item>
    </style>

    <style name="CheckBoxTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/deviceStatusBarHeaderTextColor</item>
        <item name="colorControlActivated">@color/deviceStatusBarHeaderTextColor</item>
        <item name="buttonTint">@color/deviceStatusBarHeaderTextColor</item>
    </style>

    <style name="SeekBarTheme" parent="Widget.AppCompat.SeekBar.Discrete">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/deviceStatusBarBackgroundColor</item>
        <item name="android:progressTint">@color/colorPrimary</item>
        <item name="android:thumbTint">@color/colorPrimaryDark</item>
    </style>

    <style name="FilePickerTheme" parent="NNF_BaseTheme.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="nnf_list_item_divider">?android:attr/listDivider</item>
        <item name="alertDialogTheme">@style/FilePickerAlertDialogTheme</item>
    </style>

    <style name="FilePickerAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
